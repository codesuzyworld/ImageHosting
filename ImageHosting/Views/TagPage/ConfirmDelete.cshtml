@model ImageHosting.Models.TagDto

@{
    ViewData["Title"] = "Confirm Delete";
}

<h2>Are you sure you want to delete this Tag?</h2>

<div class="card">
    <div class="card-body">
        <h4>@Model.TagName</h4>
        <p><strong>Tag Color:</strong> @Model.TagColor</p>
    </div>
</div>

<form asp-action="Delete" asp-route-id="@Model.TagID">
    <input type="hidden" asp-for="TagID" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>