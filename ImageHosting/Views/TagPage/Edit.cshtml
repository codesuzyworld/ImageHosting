@model ImageHosting.Models.TagDto

@{
    ViewData["Title"] = "Edit Tag";
}

<h2>Edit Tag</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Update" asp-route-id="@Model.TagID">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TagID" />
            <div class="form-group">
                <label asp-for="TagName" class="control-label"></label>
                <input asp-for="TagName" class="form-control" />
                <span asp-validation-for="TagName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TagColor" class="control-label">Tag Color</label>
                <input asp-for="TagColor" type="color" class="form-control" />
                <span asp-validation-for="TagColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List" class="btn btn-secondary">Back to Tag List</a>
</div>