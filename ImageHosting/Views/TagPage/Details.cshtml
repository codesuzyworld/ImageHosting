@model ImageHosting.Models.ViewModels.TagDetails

@{
    ViewData["Title"] = "Tag Details";
}

<div class="card mb-3">
    <div class="card-header">
        <h2>Tag Details: @Model.Tag.TagName</h2>
    </div>
    <div class="card-body">
        <p><strong>Tag Color:</strong> <span style="background-color:@Model.Tag.TagColor;color: white;">@Model.Tag.TagColor</span></p>
    </div>
</div>

<h3>Projects Associated with this Tag</h3>

@if (Model.AssociatedProjects != null && Model.AssociatedProjects.Any())
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Project Name</th>
                <th>Project Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model.AssociatedProjects)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => project.ProjectName)</td>
                    <td>@Html.DisplayFor(modelItem => project.ProjectDescription)</td>
                    <td>
                        <a asp-action="Details" asp-controller="ProjectPage" asp-route-id="@project.ProjectId" class="btn btn-info">View Project</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No projects are associated with this tag yet.</p>
}

<div class="mt-3">
    <a asp-action="List" class="btn btn-secondary">Back to Tag List</a>
</div>