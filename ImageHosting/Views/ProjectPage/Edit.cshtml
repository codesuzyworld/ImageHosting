@model ImageHosting.Models.ProjectDto

@{
    ViewData["Title"] = "View";
}

<h1>Edit Project</h1>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" asp-route-id="@Model.ProjectId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="ProjectId" />

            <div class="form-group">
                <label asp-for="ProjectName" class="control-label"></label>
                <input asp-for="ProjectName" class="form-control" />
                <span asp-for="ProjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectDescription" class="control-label"></label>
                <input asp-for="ProjectDescription" class="form-control" />
                <span asp-for="ProjectDescription" class="text-danger"></span>
            </div>

            <!-- Dropdown for Uploader -->
            <div class="form-group">
                <label asp-for="UploaderId" class="control-label">Uploader</label>
                <select asp-for="UploaderId" asp-items="ViewBag.Uploaders" class="form-control"></select>
                <span asp-validation-for="UploaderId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List" class="btn btn-secondary">Back to List</a>
</div>
